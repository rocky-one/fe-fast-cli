{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es5", "es6", "es2019"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": "/",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}

