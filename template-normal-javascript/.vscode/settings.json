{
  "editor.formatOnSave": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[javascript]": {
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.formatOnSave": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  "editor.indentSize": "tabSize"
}
